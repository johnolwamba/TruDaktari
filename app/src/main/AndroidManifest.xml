<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doreenaradi.trudaktari">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenView"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeView"
            android:screenOrientation="portrait"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".UsefulInfoView"
            android:label="Useful Info"
            android:parentActivityName=".HomeView"
            android:screenOrientation="portrait"/>

        <activity android:name=".SearchView"
            android:label="Search"
            android:parentActivityName=".HomeView"
            android:screenOrientation="portrait"/>

        <activity android:name=".ReportView"
            android:label="Report"
            android:parentActivityName=".HomeView"
            android:screenOrientation="portrait"/>

        <activity android:name=".HelpView"
            android:label="Help"
            android:parentActivityName=".HomeView"
            android:screenOrientation="portrait"/>
    </application>

</manifest>